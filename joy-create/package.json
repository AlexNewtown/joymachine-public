{
    "name": "joy-create",
    "version": "v0.0.1",
    "description": "Very, very work-in-progress electron app for a procedural generation (shape-based) system.",
    "main": "main.js",
    "scripts": {
        "preinstall": "rimraf vendor/codemirror && rimraf vendor/jquery",
        "postinstall": "vendor-copy",
        "start": "electron ."
    },
    "repository": "https://github.com/joymachinegames/joymachine-public",
    "keywords": [
        "electron",
        "procedural",
        "games",
        "joy",
        "joymachine"
    ],
    "author": "Joy Machine",
    "license": "MIT",
    "dependencies": {
        "dat-gui": "^0.5.0",
        "electron-is": "^2.4.0",
        "electron-log": "^2.2.7",
        "electron-require": "^0.3.0",
        "gl-matrix": "^2.3.2",
        "lodash": "^4.17.4",
        "menubar": "^5.2.3",
        "stats-js": "^1.0.0-alpha1",
        "three": "^0.82.1",
        "three-orbit-controls": "^82.1.0",
        "three.meshline": "^1.0.3"
    },
    "devDependencies": {
        "codemirror": "^5.28.0",
        "colors": "^1.1.2",
        "devtron": "^1.4.0",
        "electron": "~1.6.2",
        "elemon": "^5.0.3",
        "jquery": "^3.2.1",
        "rimraf": "^2.6.1",
        "vendor-copy": "^1.3.1"
    },
    "electron-require": {
        "root": "",
        "src": "src",
        "app": "src/app",
        "common": "src/common",
        "editor": "src/editor",
        "pcg": "src/pcg",
        "viewport": "src/viewport"
    },
    "vendorCopy": [ 
        {
            "from": "node_modules/codemirror/lib",
            "to": "vendor/codemirror"
        },
        {
            "from": "node_modules/jquery/dist",
            "to": "vendor/jquery"
        }
    ]
}