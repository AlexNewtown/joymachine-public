{
  "name": "joy-create",
  "productName": "joy-create",
  "description": "Very, very work-in-progress electron app for a procedural generation (shape-based) system.",
  "version": "v0.0.1",
  "author": "Joy Machine",
  "copyright": "Â© 2015-2017 Joy Machine",
  "homepage": "https://joy-machine.com",
  "license": "MIT",
  "repository": "https://github.com/joymachinegames/joymachine-public",
  "keywords": [
    "electron",
    "procedural",
    "games",
    "joy",
    "joymachine"
  ],
  "main": "app/background.js",
  "build": {
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": null
  },
  "scripts": {
    "preinstall": "rimraf app/vendor",
    "postinstall": "vendor-copy && install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "fs-jetpack": "^1.0.0",
    "stats-js": "^1.0.0-alpha1",
    "three": "^0.82.1",
    "three-orbit-controls": "^82.1.0",
    "three.meshline": "^1.0.3",
    "dat-gui": "^0.5.0"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "electron": "^1.6.11",
    "electron-builder": "^19.16.0",
    "electron-mocha": "^4.0.0",
    "devtron": "^1.4.0",
    "elemon": "^5.0.3",
    "gulp": "^3.9.1",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.3.2",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.8",
    "gulp-watch": "^4.3.11",
    "istanbul": "^0.4.5",
    "minimist": "^1.2.0",
    "mocha": "^3.4.2",
    "rollup": "^0.45.2",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.15",
    "spectron": "^3.7.2",
    "codemirror": "^5.28.0",
    "colors": "^1.1.2",
    "rimraf": "^2.6.1",
    "vendor-copy": "^1.3.1"
  },
  "vendorCopy": [
    {
      "from": "node_modules/codemirror/lib",
      "to": "app/vendor/codemirror"
    },
    {
      "from": "node_modules/codemirror/mode/javascript",
      "to": "app/vendor/codemirror"
    }
  ]
}
